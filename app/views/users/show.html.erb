<div class="container py-3 h-100 mb-2">
  <div class="d-flex justify-content-between mb-3">
    <%= link_to root_path, class: "return-arrow " do %>
    <i class="fa-solid fa-chevron-left"></i>
    <% end %>
    <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
    <button class="Btn">
      <div class="sign"><svg viewBox="0 0 512 512">
          <path
            d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z">
          </path>
        </svg></div>
      <div class="text-test">Logout</div>
    </button>
    <%end%>
  </div>
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-12 col-xl-4">
      <div class="card">
        <div class="card-body text-center">
          <div class="mt-2 mb-4">
            <% if @user.picture? %>
            <img src=<%=@user.picture%> class="img-profil-bigger" />
            <%else%>
            <img
              src="data:image/png;base64,"
              class="rounded-circle img-fluid" style="width: 100%; height: 100%" />
            <% end %>
          </div>
          <h4 class="wakely-font mb-2"><%=@user.username%></h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center align-items-center h-100 mt-3">
    <div class="col-md-12 col-xl-4">
      <h6 class="wakely-font justify-content-center d-flex"><strong>Dernier post</strong></h6>
      <div class="card ">
        <div class="card-body text-center">
          <div class="post">
            <div class="title-post">
              <div class="profil-img-username d-flex flex-row align-items-end">
                <% if @user.picture? %>
                <img src=<%=@user.picture%> class="img-profil" alt="sad">
                <% else %>
                <img
                  src="data:image/png;base64,"
                  class="img-profil" alt="sad">
                <% end %>
              </div>
              <div class="profil-info">
                <div class="user text-start">
                  <p class="text-decoration-none wakely-font"><%= @user.username%></p>
                </div>
                <div class="mood">
                  <h6 class="wakely-font"><%=@user.last_post_day.mood%></h6>
                </div>
              </div>
            </div>
            <div class="main-post border border-dark">
              <div class="content mx-3">
                <p class="wakely-font content-post"><%= @user.last_post_day.content %></p>
              </div>
              <div class="track">
                <iframe style="border-radius:12px"
                  src=<%="https://open.spotify.com/embed/track/#{@user.last_post_day.track_id}?utm_source=generator"%>
                  width="100%" height="152" frameBorder="0" allowfullscreen=""
                  allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                  loading="lazy"></iframe>
              </div>
            </div>
            <div class="post">
              <div class="main-post border border-dark">
                <div class="content mx-3 d-flex justify-content-start">
                  <p class="wakely-font content-post"><%= @user.last_post_day.content %></p>
                </div>
                <div class="date-time mx-1 wakely-font d-flex justify-content-start">
                  <h6 class="mx-1"> <small><%=@user.last_post_day.created_at.strftime('%d/%m/%Y - %H:%M:%S')%></small>
                  </h6>
                </div>
                <div>
                  <h6 class="d-flex justify-content-start">
                    <small><%= link_to "Ajouter un commentaire", post_path(@user.last_post_day), class:"add_comment"%></small>
                  </h6>
                  <%= link_to "supprimer le post", post_path(@user.last_post_day) ,class:"sup-btn text-light" , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                </div>
                <br>



              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center align-items-center h-100 mt-3">
            <div class="col-md-12 col-xl-4">
              <h6 class=" wakely-font justify-content-center d-flex"><strong>Memories</strong></h6>
              <div class="card">
                <div class="card-body text-center">
                  <% @last_posts.each do |post| %>
                  <div class="main-post border border-dark">
                    <div class="content mx-3 d-flex justify-content-start">
                      <p class="wakely-font content-post"><%= post.content %></p>
                    </div>
                  </div>
                  <div class="main-post">
                    <div class="track">
                      <iframe style="border-radius:12px"
                        src=<%="https://open.spotify.com/embed/track/#{post.track_id}?utm_source=generator"%>
                        width="100%" height="152" frameBorder="0" allowfullscreen=""
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                        loading="lazy"></iframe>
                    </div>
                  </div>
                </div>
                <div class="date-time mx-1 wakely-font d-flex justify-content-start">
                  <small class="mx-1"><%=post.created_at%></small>
                </div>
                <h6 class="d-flex justify-content-start">
                  <small><%= link_to "Ajouter un commentaire", post_path(post), class:"add_comment"%></small></h6>

                <%= link_to "supprimer le post", post_path(post.user) ,class:"sup-btn" , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>


                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
  </div>
</div>
